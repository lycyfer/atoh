generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Clients {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  AccountNumber String
  LastName      String
  FirstName     String
  Patronymic    String?
  DateOfBirth   DateTime
  INN           String
  Responsible   String
  Status        Status   @default(NotInWork)
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  FullName String
  Login    String
  Password String
}

enum Status {
  NotInWork
  AtWork
  Rejection
  DealIsClosed
}
